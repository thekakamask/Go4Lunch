<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/go4lunch_background"
    android:orientation="vertical"
    android:id="@+id/welcome_activity_layout">

    <EditText
        android:id="@+id/email_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/size_text_button_w360"
        android:hint="@string/email_edit"
        android:inputType="textEmailAddress"
        android:autofillHints="emailAddress"
        android:layout_marginStart="@dimen/margin_button_start_w360"
        android:layout_marginEnd="@dimen/margin_button_start_w360"
        android:layout_marginBottom="@dimen/margin_button_w360"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/password_input"/>

    <EditText
        android:id="@+id/password_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/size_text_button_w360"
        android:hint="@string/password_edit"
        android:inputType="textPassword"
        android:drawableEnd="?attr/password_logo_close"
        android:autofillHints="password"
        android:layout_marginStart="@dimen/margin_button_start_w360"
        android:layout_marginEnd="@dimen/margin_button_start_w360"
        android:layout_marginBottom="@dimen/margin_button_w360"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_sign_in"/>

    <Button
        android:id="@+id/button_sign_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/size_text_button_w360"
        android:text="@string/sign_in"
        android:drawableLeft="@drawable/account_button"
        android:layout_marginStart="@dimen/margin_button_start_w360"
        android:layout_marginEnd="@dimen/margin_button_start_w360"
        android:layout_marginBottom="@dimen/margin_button_to_text_view_bottom_w360"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_link" />

    <TextView
        android:id="@+id/sign_up_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_sign_up"
        android:textSize="@dimen/size_text_message_w360"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/margin_button_w360"
        android:layout_marginEnd="@dimen/margin_button_w360"
        android:layout_marginBottom="@dimen/margin_text_view_bottom_w360"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>