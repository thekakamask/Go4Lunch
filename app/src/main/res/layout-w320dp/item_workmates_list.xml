<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/workmates_list_fragment_padding_w320">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/workmates_list_fragment_image_size_w320"
        android:layout_height="@dimen/workmates_list_fragment_image_size_w320"
        android:src="@drawable/workmates_list_profile"
        app:civ_border_width="@dimen/workmates_list_fragment_border_size_w320"
        app:civ_border_color="#FF000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/workmates_list_fragment_margin_w320"
        android:textSize="@dimen/workmates_list_fragment_text_size_w320"
        android:textStyle="bold"
        android:text="@string/scarlett_is_eating_french"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/le_zinc"
        android:textSize="@dimen/workmates_list_fragment_text_size_w320"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/name_text_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>