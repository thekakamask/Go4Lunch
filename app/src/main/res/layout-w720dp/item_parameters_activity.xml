<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_parameters_activity_padding_w720"
    android:background="@color/white">

    <TextView
        android:id="@+id/element_child_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/header_example"
        android:textSize="@dimen/item_parameters_activity_text_size1_w720"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/elements_child_checkbox"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/element_child_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/description_example"
        android:textSize="@dimen/item_parameters_activity_text_size2_w720"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/elements_child_checkbox"
        app:layout_constraintTop_toBottomOf="@id/element_child_title" />

    <CheckBox
        android:id="@+id/elements_child_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/element_child_title"
        app:layout_constraintBottom_toBottomOf="@id/element_child_description" />

</androidx.constraintlayout.widget.ConstraintLayout>